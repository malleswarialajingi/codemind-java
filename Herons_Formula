import java.util.*;
public class Heron{
    public static void main(String[] args){
        Scanner scan = new Scanner(System.in);
        int a = scan.nextInt();
        int b = scan.nextInt();
        int c = scan.nextInt();
        float s = (float) (a+b+c)/2;
        float output = (float) Math.sqrt(s*(s-a)*(s-b)*(s-c));
        System.out.printf("%.4f\n",output);
    }
}
